<Page x:Class="PassKeeper_WPF.Views.Pages.ForgotPasswordPage"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:PassKeeper_WPF.Views.Pages"
  xmlns:md ="http://materialdesigninxaml.net/winfx/xaml/themes"
  mc:Ignorable="d" 
  d:DesignHeight="700" d:DesignWidth="375"
  Title="PassKeeper">

    <Grid>

        <Label Width="212" Height="60" Margin="0 75 0 0"  HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image    Source="\Resources\Images\passkeeper main logo.png"/>
        </Label>


        <StackPanel>
            <TextBox  Text="email" FontSize="32" Foreground="DimGray" Padding="9 3 0 0" Margin="0 200"   Name="EmailTextBox" Background="White" Width="260" Height="60"/>
            <Button  Content="Send code" Background="#FF244293" Width="261" Height="45" FontSize="18"  FontFamily="Josefin Sans"/>


        </StackPanel>
    </Grid>
</Page>
